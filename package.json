{
	"name": "n8n-nodes-klaviyo-api",
	"version": "0.1.1",
	"description": "n8n community node for Klaviyo marketing automation API - manage profiles, lists, segments, campaigns, events, and more",
	"license": "MIT",
	"homepage": "https://github.com/chrillep/n8n-nodes-klaviyo-api#readme",
	"keywords": [
		"n8n-community-node-package",
		"klaviyo",
		"marketing",
		"email-marketing",
		"automation",
		"crm",
		"profiles",
		"campaigns",
		"lists",
		"segments",
		"events"
	],
	"author": {
		"name": "Christian Widlund",
		"email": "christian.widlund@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/chrillep/n8n-nodes-klaviyo-api.git"
	},
	"scripts": {
		"build": "n8n-node build",
		"build:watch": "tsc --watch",
		"dev": "n8n-node dev",
		"lint": "n8n-node lint",
		"lint:fix": "n8n-node lint --fix",
		"release": "n8n-node release",
		"prepublishOnly": "n8n-node prerelease"
	},
	"files": [
		"dist"
	],
	"n8n": {
		"n8nNodesApiVersion": 1,
		"strict": true,
		"credentials": [
			"dist/credentials/KlaviyoApi.credentials.js"
		],
		"nodes": [
			"dist/nodes/KlaviyoApi/KlaviyoApi.node.js"
		]
	},
	"devDependencies": {
		"@n8n/node-cli": "*",
		"eslint": "9.32.0",
		"prettier": "3.6.2",
		"release-it": "^19.0.4",
		"typescript": "5.9.2"
	},
	"peerDependencies": {
		"n8n-workflow": "*"
	}
}
